      <div  class="col-md-10" ng-controller="adminCtr">
         <div  style="padding:10px; margin-left: 20%;"  >
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Search Driver Profile
            </button>
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
               <div class="modal-dialog modal-sm">
                  <div class="modal-content">
                     <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Enter driver detail</h4>
                     </div>
                     <div class="modal-body">
                        <p>
                        <form role="form">
                           <div class="form-group">
                              <label>User name:</label>
                              <input type="text" class="form-control" placeholder="Enter email"pattern=".{0,}" required data-ng-model="driver_email">
                           </div>
                           <button type="submit" class="btn btn-block" ng-click="getDriverProfile()">Search</button>
                        </form>
                        </p>
                        <div class="modal-footer">
                           <button type="button" class="btn btn-default" data-dismiss="modal" >Close</button>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <br>
            <br>
            <button type="button" class="btn btn-primary btn-lg " data-toggle="modal" data-target="#myModal1">
            Search User Profile
            </button>
            <!-- Modal -->
            <div class="modal fade" id="myModal1" role="dialog" >
               <div class="modal-dialog modal-sm">
                  <div class="modal-content">
                     <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Enter user detail</h4>
                     </div>
                     <div class="modal-body">
                        <p>
                        <form role="form">
                           <div class="form-group">
                              <label>User name:</label>
                              <input type="text" class="form-control" placeholder="Enter email"pattern=".{0,}" required data-ng-model="user_email">
                           </div>
                           <button type="submit" class="btn btn-block" ng-click="getUserProfile()">Search</button>
                        </form>
                        </p>
                        <div class="modal-footer">
                           <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <div ng-if="search_flag">
            <div class="driver_xyz">
               <div class="driver_container">
                  <div class="form-group">
                     firstname: <input type="first_name" class="text-input" id="first_name"  name="firstname" data-ng-model="firstname" disabled>
                  
                     <input type="last_name" class="text-input" id="last_name"  data-ng-model="lastname" name="lastname" disabled>
                  </div>
                  <hr class="partition">
                  <span class="aboutHeader">Address</span><br>
                  <div class="form-group">
                     <input type="Address" class="text-input" id="Address"  data-ng-model="address" name="address" disabled>
                  </div>
                  <div class="form-group">
                     <input type="City" class="text-input" id="City"  data-ng-model="city" name="city" disabled>
                  </div>
                  <div class="form-group">
                     <input type="State" class="text-input" id="State"  data-ng-model="state" name="state" disabled>
                  </div>
                  <div ng-if="driver_flag">
                     <div class="form-group">
                        <input type="Zipcode" class="text-input" id="Zipcode"  data-ng-model="zipcode" name="zipcode" disabled>
                     </div>
                     <hr class="partition">
                     <span class="aboutHeader">Contact Info:</span><br>
                     <div class="form-group">
                        <input type="phone" class="text-input" id="phone" data-ng-model="phone" name="phone" disabled>
                     </div>
                     <hr class="partition">
                     <span class="aboutHeader">Car Number</span>
                     <div class="form-group">
                        <input type="Credit_Card_Number" class="text-input" id="Credit_Card_Number"  data-ng-model="carNumber" name="carNumber" disabled>
                     </div>
                     <div class="form-group">
                        <input type="cvv" class="text-input" id="cvv"  data-ng-model="carModel" name="carModel" disabled>
                     </div>
                     <div class="form-group">
                        <input type="expiration_date" class="text-input" id="expiration_date"  data-ng-model="ssnNumber" name="ssnNumber" disabled>
                     </div>
                     <br>
                  </div>
                  <div ng-if="user_flag">
                     <hr class="partition">
                     
                     <div class="form-group">Credit_Card_Number:
                        <input type="Credit_Card_Number" class="text-input" id="Credit_Card_Number" data-ng-model="cardnumber" disabled>
                     </div>
                     <div class="form-group">cvv:
                        <input type="cvv" class="text-input" id="cvv" data-ng-model="cardcvv" disabled>
                     </div>
                     <div class="form-group">expiration date:
                        <input type="expiration_date" class="text-input" id="expiration_date"  data-ng-model="cardexpirationdate" disabled>
                     </div>
                  </div>
               </div>
            </div>
         </div>
